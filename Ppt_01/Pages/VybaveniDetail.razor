@page "/vybaveni/{Id:guid}"
@inject HttpClient Http

<h3 class="display-4">Detail výrobku - @item.Name</h3>


    <table class="table table-striped table-primary">
        <tbody>
       <tr>
            <th> Id </th>
            <td>@item.Id</td>
       </tr>    
       <tr>
            <th> Jméno </th>
            <td>@item.Name</td>
       </tr> 
       <tr>
            <th> Datum nákupu </th>
            <td>@item.BoughtDateTime</td>
       </tr> 
       <tr>
            <th> Datum poslední revize  </th>
            <td>@item.LastRevision</td>
       </tr> 
       <tr>
            <th> Potřebuje revizi? </th>
            <td>@(item.NeedsRevision?"Ano":"Ne")</td>
       </tr> 
       <tr>
            <th> Cena </th>
            <td>@item.PriceCzk</td>
       </tr>      
       </tbody> 
    </table>
    

@code {
    VybaveniModel? item;
    [Parameter]
    public Guid Id { get; set; }

    protected override async Task OnInitializedAsync()
    {

        item = await Http.GetFromJsonAsync<VybaveniModel>($"/vybaveni/{Id}");
    }
}
